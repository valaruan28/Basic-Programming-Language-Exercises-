// Latihan130402_13.cpp : This file contains the 'main' function. Program execution begins and ends there.
/*
	Goal    : Make a Looping Program
  Program : Displays the @ character for Odd and # for Even according to Boundary (Double Looping)
*/

#include <iostream>
using namespace std;

int main()
{
	//Inisialisasi Variabel
	int batas;

	//Input Batas Bilangan dari User
	cout << "Masukkan Batas : ";
	cin >> batas;

	//Melakukan Perulangan For Pertama
	for (int i = 0; i < batas; i++) 
	{
		//Melakukan Perulangan For Kedua
		for (int j = 0; j < batas; j++) 
		{
			//Melakukan Statement IF pada i Apakah Genap atau Tidak
			if (i % 2 == 0)
				cout << "@" ;
			else
				cout << "#" ;
		}
	//Meletakkan Output Pada Baris Berikutnya
	cout << "\n";
	}		
}

